// Pieuvre Design System — Tokens
//
// Palette de couleurs, espacements et dimensions.

// === COULEURS ===

// Fond
export global Tokens {
    // Background
    out property <color> background-color: #11111B;
    out property <color> surface-color: #1E1E2E;
    out property <color> surface-hover: #313244;
    out property <color> surface-active: #45475A;
    
    // Accent
    out property <color> primary-color: #6366F1;
    out property <color> primary-hover: #818CF8;
    out property <color> primary-active: #4F46E5;
    
    // Texte
    out property <color> text-primary: #CDD6F4;
    out property <color> text-secondary: #7F849C;
    out property <color> text-muted: #585B70;
    
    // États
    out property <color> success-color: #A6E3A1;
    out property <color> warning-color: #F9E2AF;
    out property <color> error-color: #F38BA8;
    out property <color> info-color: #89B4FA;
    
    // Bordures
    out property <color> border-color: #45475A;
    out property <color> border-focus: #6366F1;
    
    // === DIMENSIONS ===
    
    // Espacements
    out property <length> spacing-xs: 4px;
    out property <length> spacing-sm: 8px;
    out property <length> spacing-md: 16px;
    out property <length> spacing-lg: 24px;
    out property <length> spacing-xl: 32px;
    
    // Radius
    out property <length> radius-sm: 4px;
    out property <length> radius-md: 8px;
    out property <length> radius-lg: 12px;
    out property <length> radius-full: 9999px;
    
    // Tailles
    out property <length> sidebar-width: 220px;
    out property <length> header-height: 56px;
    out property <length> statusbar-height: 32px;
    out property <length> button-height: 40px;
    out property <length> input-height: 36px;
    
    // === TYPOGRAPHIE ===
    out property <length> font-size-xs: 11px;
    out property <length> font-size-sm: 13px;
    out property <length> font-size-md: 15px;
    out property <length> font-size-lg: 18px;
    out property <length> font-size-xl: 24px;
    out property <length> font-size-2xl: 32px;
    
    // === ANIMATIONS ===
    out property <duration> anim-fast: 100ms;
    out property <duration> anim-normal: 200ms;
    out property <duration> anim-slow: 300ms;
}
