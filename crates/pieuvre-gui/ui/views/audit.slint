                    }
                    
                    ServiceRow {
                        name: "WSearch";
                        display-name: "Windows Search";
                        status: "running";
                        start-type: "Automatic";
                    }
                }
            }
            
            // Network section
            AuditSection {
                title: "R√©seau";
                count: 2;
                expanded: false;
                
                VerticalLayout {
                    padding: Tokens.spacing-sm;
                    
                    Text {
                        text: "Configuration r√©seau √† analyser...";
                        color: Tokens.text-secondary;
