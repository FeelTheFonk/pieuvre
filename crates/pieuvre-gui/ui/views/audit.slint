                }
            }
            
            // Services section
            AuditSection {
                title: "Services";
                count: 8;
                
                VerticalLayout {
                    padding: Tokens.spacing-sm;
                    spacing: Tokens.spacing-xs;
                    
                    ServiceRow {
                        name: "DiagTrack";
